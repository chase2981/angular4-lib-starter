{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    // "mapRoot": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "rootDir": "./tmp",
    "baseUrl": ".",
    "outDir": "./build",
    "declaration": true,
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"],
      "rxjs/*": ["./node_modules/rxjs/*"] // This mapping is relative to "baseUrl"
    },
    "listFiles": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "files": [
    "./tmp/public_api.ts"
  ],
  "include": [
    "./tmp/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
    // "**/node_modules"
  ],
  /* https://github.com/angular/angular/blob/745b59f49cacb55c54d11e948c011fbbf8b724f7/packages/compiler-cli/src/transformers/api.ts */
  // "angularCompilerOptions": {
  //   "genDir": "./build",
  //   // "diagnostics": true,
  //   // "trace": true,
  //   /* "skipMetadataEmit" : true,
  //     "flatModuleOutFile": "public_api.js", */
  //   "annotateForClosureCompiler": true,
  //   // "strictInjectionParameters": true,
  //   "generateCodeForLibraries": false,
  //   "skipMetadataEmit": true,
  //   "allowEmptyCodegenFiles": true
  //   /* "flatModuleOutFile": "public_api.js",
  //     "flatModuleId": "angular4-lib-starter" */
  //   // "entryModule": "lib/modal/modal.module#ModalModule"
  // }
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "angular4-lib-starter"
  }
}
